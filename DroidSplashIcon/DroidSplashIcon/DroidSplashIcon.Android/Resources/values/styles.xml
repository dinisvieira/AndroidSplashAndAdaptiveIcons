<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <style name="MainTheme" parent="MainTheme.Base">
  </style>
  <!-- Base theme applied no matter what API -->
  <style name="MainTheme.Base" parent="Theme.MaterialComponents.Light.DarkActionBar">
    <!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
    <item name="windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">false</item>
    <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette -->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">@color/sitedocs_yellow</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">@color/sitedocs_yellow_dark</item>
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <item name="colorAccent">@color/sitedocs_complementary</item>
    <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->
    <item name="windowActionModeOverlay">true</item>

    <item name="android:statusBarColor">@color/sitedocs_header_dark</item>

    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>

    <!-- Setting the cursor drawable to null should result in it's color being the same as the textcolor -->
    <item name="android:textCursorDrawable">@null</item>
  </style>

  <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">@color/sitedocs_complementary</item>
  </style>
  
  <style name="Theme.App.Starting" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:statusBarColor">@color/sitedocs_header_dark</item>
    <item name="colorPrimaryDark">@color/black_opaque</item>
    <item name="android:windowBackground">@drawable/splash_drawable</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsTranslucent">false</item>
    <item name="android:windowIsFloating">false</item>
    <item name="android:backgroundDimEnabled">true</item>
  </style>

</resources>
